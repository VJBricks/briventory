<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration xmlns="http://www.jooq.org/xsd/jooq-codegen-3.19.2.xsd">
    <jdbc>
        <driver>org.postgresql.Driver</driver>
        <url>jdbc:postgresql://localhost/briventory-dev</url>
        <user>briventory</user>
        <password>briventory</password>
    </jdbc>
    <generator>
        <name>org.jooq.codegen.JavaGenerator</name>
        <database>
            <name>org.jooq.meta.postgres.PostgresDatabase</name>
            <inputSchema>public</inputSchema>
            <includes>.*</includes>
        </database>

        <generate>
            <pojos>false</pojos>
            <routines>true</routines>
            <fluentSetters>true</fluentSetters>

            <deprecated>false</deprecated>

            <generatedAnnotation>true</generatedAnnotation>
            <generatedAnnotationType>DETECT_FROM_JDK</generatedAnnotationType>
            <generatedAnnotationDate>false</generatedAnnotationDate>
            <generatedAnnotationJooqVersion>false</generatedAnnotationJooqVersion>

            <nullableAnnotation>true</nullableAnnotation>
            <nonnullAnnotation>true</nonnullAnnotation>

            <generatedSerialVersionUID>HASH</generatedSerialVersionUID>

            <jpaAnnotations>true</jpaAnnotations>
            <jpaVersion>2.2</jpaVersion>

            <validationAnnotations>true</validationAnnotations>

            <constructorPropertiesAnnotation>true</constructorPropertiesAnnotation>
            <constructorPropertiesAnnotationOnPojos>true</constructorPropertiesAnnotationOnPojos>
            <constructorPropertiesAnnotationOnRecords>true</constructorPropertiesAnnotationOnRecords>
        </generate>

        <target>
            <packageName>jooq</packageName>
            <directory>app</directory>
            <encoding>UTF-8</encoding>
        </target>
    </generator>
</configuration>